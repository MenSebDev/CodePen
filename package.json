{
    "name": "@menseb/codepen",
    "version": "0.0.1",
    "description": "Bundle HTML, CSS & JS for the CodePen website.",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "build": "rimraf dist && npm-run-all build:*",
        "build:client": "cross-env NODE_ENV=production npm run webpack:client",
        "build:server": "cross-env NODE_ENV=production npm run webpack:server",
        "commit": "cz",
        "eslint": "npm run eslint:config -- eslint --ignore-path .gitignore --no-error-on-unmatched-pattern",
        "eslint:config": "cross-env ESLINT_USE_FLAT_CONFIG=false",
        "format:check": "npm run prettier -- --check --ignore-path .gitignore",
        "format:fix": "npm run format:check -- --write",
        "git:amend": "git commit --amend --no-edit && git push -f",
        "git:pull": "git checkout dev && git fetch && git pull",
        "git:merge": "git checkout main && git merge dev",
        "git:push": "npm run git:pull && npm run git:merge && git push",
        "lint": "npm-run-all lint:*",
        "lint:md": "markdownlint . --dot --ignore node_modules",
        "lint:json": "npm run eslint -- **/*.{json,jsonc} **/.*rc",
        "lint:js": "npm run eslint -- **/*.{js,jsx}",
        "lint:ts": "npm run eslint -- **/*.{ts,tsx}",
        "lint:yaml": "npm run eslint -- **/*.{yml,yaml}",
        "prettier": "prettier . \"!**/*.md\"",
        "test": "jest",
        "start": "concurrently \"npm:start:server\" \"npm:start:client\" ",
        "start:client": "webpack serve --config ./webpack.client.js",
        "start:server": "nodemon",
        "webpack:client": "webpack --config ./webpack.client.js",
        "webpack:server": "webpack --config ./webpack.server.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MenSebDev/CodePen.git"
    },
    "keywords": [
        "codepen",
        "animation",
        "sass",
        "css",
        "ts",
        "js",
        "html"
    ],
    "author": "SÃ©bastien Menard",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/MenSebDev/CodePen/issues"
    },
    "homepage": "https://github.com/MenSebDev/CodePen#readme",
    "devDependencies": {
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.5.0",
        "@testing-library/user-event": "^14.5.2",
        "@types/jest": "^29.5.13",
        "@typescript-eslint/eslint-plugin": "^8.8.1",
        "@typescript-eslint/parser": "^8.8.1",
        "clipboardy": "^4.0.0",
        "commitizen": "^4.3.0",
        "concurrently": "^9.0.1",
        "cross-env": "^7.0.3",
        "css-loader": "^7.1.2",
        "dotenv": "^16.4.5",
        "esbuild": "^0.24.0",
        "esbuild-sass-plugin": "^3.3.1",
        "eslint": "^9.3.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jest": "^28.6.0",
        "eslint-plugin-jest-dom": "^5.4.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-yml": "^1.14.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "markdownlint": "^0.34.0",
        "markdownlint-cli": "^0.40.0",
        "nodemon": "^3.1.7",
        "npm-run-all2": "^6.2.0",
        "prettier": "^3.2.5",
        "rimraf": "^6.0.1",
        "sass": "^1.77.8",
        "sass-loader": "^16.0.2",
        "style-loader": "^4.0.0",
        "stylelint": "^16.5.0",
        "stylelint-config-sass-guidelines": "^11.1.0",
        "stylelint-config-standard-scss": "^13.1.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.1",
        "typescript": "^5.6.2",
        "webpack": "^5.95.0",
        "webpack-bundle-analyzer": "^4.10.2",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.1.0",
        "webpack-merge": "^6.0.1",
        "yaml-eslint-parser": "^1.2.2"
    }
}
