{
    "compilerOptions": {
        "baseUrl": "./",
        "downlevelIteration": false,
        "esModuleInterop": true,
        "importHelpers": true,
        "lib": ["DOM", "ES6"],
        "module": "ES6",
        "moduleResolution": "Node",
        "noEmitHelpers": true,
        "outDir": "./www",
        "removeComments": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": false,
        "target": "ES6",
        "useDefineForClassFields": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
